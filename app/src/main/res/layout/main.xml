<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    >
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="9dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!--Hazte Premium-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/azul"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"
                android:onClick="tutorialGeneral"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_grupo_btnblue"
                        android:textColor="@color/black"
                        android:onClick="premium"
                        android:textStyle="bold"
                        android:text="Hazte Premium Aqui"
                        android:backgroundTint="@color/amarillo"
                        />

                    <!--<Button
                        android:id="@+id/Testnew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Button" />-->
                </LinearLayout>
            </LinearLayout>

            <!--TOPBAR-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp">

                <!--BTNS RECOMENDS-->
                <TextView
                    android:id="@+id/UserNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="Elige categoria"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/myPlanBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_grupo_btnblue"
                    android:onClick="myPlan"
                    android:text="My Plan" />


            </LinearLayout>

            <!--HACER EL TEST-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                android:background="@color/azul"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="20dp"
                android:onClick="TestNuevo"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/ic_grupo_hut"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Determinar tu nivel de inglés aquí"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_grupo_146"
                    android:gravity="bottom"
                    android:onClick="chose_est"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-15dp"
                        android:text="Structures"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:minWidth="100dp"
                        android:minHeight="50dp"
                        android:progress="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_grupo_147"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:onClick="chose_vocab"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-15dp"
                        android:text="Vocabulary"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:minWidth="100dp"
                        android:minHeight="50dp"
                        android:progress="1" />
                </LinearLayout>
            </LinearLayout>

            <!--BTNS OTROS TEMAS-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="15dp"
                >

                <!--BTN CULTURA-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:onClick="chose_cultura"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_grupo_81">

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Culture"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <!--Spa Int-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:onClick="chose_spa_int"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_grupo_spaint"></LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Spanish Interferences"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <!--Cons Int-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:onClick="chose_conscis"
                    >

                    <LinearLayout
                        android:layout_width="105dp"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_grupo_conint"
                        android:layout_gravity="center">

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Conscious Interferences"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <!--Availability-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:onClick="chose_aval"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_grupo_availa"
                        >

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Availability"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <!--Transiciones-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:background="@color/azul"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="20dp"
                android:onClick="tutorialGeneral"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/ic_grupo_tes"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Transiciones"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="normal" />

                    <!--<Button
                        android:id="@+id/Testnew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Button" />-->
                </LinearLayout>
            </LinearLayout>

            <!--Chatear con un Maestro-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="25dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:background="@drawable/ic_grupo_cum"
                    android:gravity="end|center"
                    android:onClick="chat_maestro"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Chatea con un maestro"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Aclara todas tus dudas, desde la comodidad de tu casa"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/azul"
                android:layout_marginBottom="80dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="25dp"
                >
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/logo"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_grupo_btn"
                        android:gravity="center"
                        android:onClick="masinfo"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Haz click aqui para mas información"
                            android:paddingLeft="10dp"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <!--btn menu-->
    <LinearLayout
        android:id="@+id/btn_menu_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_menu"
            android:onClick="Open_menu"
            />
    </LinearLayout>

    <!--btn cerrar menu-->
    <LinearLayout
        android:id="@+id/btn_menu_closed"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:elevation="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_close"
            android:onClick="Close_menu"
            />
    </LinearLayout>

    <!--Menu-->
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:elevation="19dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            >
            <!--Otros Temas-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                >



                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Otros temas"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>

            <!--Mas Test-->
            <Button
                android:id="@+id/hamtestbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/azul"
                android:onClick="starttest"
                android:text="Test" />

            <!--Mas Info-->
            <Button
                android:id="@+id/btnlogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E53935"
                android:onClick="logout"
                android:text="Logout" />

        </LinearLayout>
    </LinearLayout>

    <!--BTNS OPC-->
    <LinearLayout
        android:id="@+id/btn_opc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/graybg"
        android:orientation="vertical"
        android:elevation="30dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView3"
            android:name="com.leal.cipm_testing.components.BottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_bottom_nav"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>