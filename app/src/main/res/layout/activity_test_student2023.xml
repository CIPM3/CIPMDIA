<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.TestStudent2023"
    android:background="@color/white"
    >
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:orientation="vertical">
            <!--Header-->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:elevation="5dp"
                android:background="@color/graybg"
                >
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentContainerView"
                    android:name="com.leal.cipm_testing.components.header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:layout="@layout/fragment_header"
                    />
            </LinearLayout>

            <!--BTN EMPEZAR TEST-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btnStartTest"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/boton_redondeado"
                    android:backgroundTint="@color/azul"
                    android:textColor="@color/white"
                    android:onClick="startTest"
                    android:text="EMPEZAR TEST"
                    />
            </LinearLayout>

            <!--SPINNERS LEVEL AND STRUCTURE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                >
                <LinearLayout
                    android:id="@+id/laychosellevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose a Level"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/azul"
                        />
                    <!--Spinner-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="end|center"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"

                        >
                        <TextView
                            android:id="@+id/txtlevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Level"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            />
                        <Spinner
                            android:id="@+id/spinlevel"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_grupo_select"
                            android:gravity="end"
                            android:spinnerMode="dialog"
                            android:theme="@style/MySpinnerStyle"
                            ></Spinner>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lay_chosel_structure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/textChose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose a Structure"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/azul"
                        />
                    <!--Spinner-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="end|center"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/txtstructure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Level"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            />
                        <Spinner
                            android:id="@+id/spinstructure"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_grupo_select"
                            android:gravity="end"
                            android:spinnerMode="dialog"
                            android:theme="@style/MySpinnerStyle"
                            ></Spinner>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--TEXT INPUTS-->
            <LinearLayout
                android:id="@+id/lay_test_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:visibility="gone"
                >
                <!--Spanish Sentences-->
                <LinearLayout
                    android:id="@+id/spanish_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:paddingHorizontal="10dp"
                    android:visibility="visible"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Como dirias? :"
                            android:textColor="@color/black"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/spanishsentence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="click siguiente oraciÃ³n"
                            android:textColor="@color/black"
                            android:textSize="15dp" />
                    </LinearLayout>

                </LinearLayout>

                <!--Input Eng-->
                <LinearLayout
                    android:id="@+id/input_lay"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp"
                    android:visibility="visible"
                    >

                    <EditText
                        android:id="@+id/answerinput1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:textColor="@color/black"
                        android:hint="escribe tu respuesta o presiona microfono y di tu respuesta"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/black"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        />
                    <!--Validacion-->
                    <LinearLayout
                        android:id="@+id/opclay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:id="@+id/respdecir"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_microfono"
                            android:layout_marginLeft="5dp"
                            android:visibility="visible"
                            android:orientation="horizontal"
                            >
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--BTNS OPC-->
            <LinearLayout
                android:id="@+id/lay_btns_opc"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                >
                <!--BTN SIGUIENTE PREGUNTA-->
                <LinearLayout
                    android:id="@+id/btn_lay_siguiente_preg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginRight="1dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_rect_ngulo_btncheck"
                        android:gravity="center"
                        android:onClick="StarterChooser"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Siguiente oraciÃ³n"
                            android:textAlignment="center"
                            android:textColor="@color/azul"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <!--BTN ENVIAR RESPUESTA-->
                <LinearLayout
                    android:id="@+id/btn_lay_enviar_resp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="1dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_rect_ngulo_btncheck"
                        android:gravity="center"
                        android:onClick="AnswerCheckerChooser"
                        >
                        <TextView
                            android:id="@+id/btncheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enviar Respuesta"
                            android:textColor="@color/azul"
                            android:textSize="16dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/timertextv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="TextView"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/azul"
                android:textSize="12dp"
                android:visibility="gone"
                />

            <!--BTN ENVIAR RESPUESTA-->
            <LinearLayout
                android:id="@+id/btn_lay_test_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/ic_rect_ngulo_btncheck"
                    android:gravity="center"
                    android:onClick="gotofragments"
                    >
                    <TextView
                        android:id="@+id/btnTestResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resultados del Test"
                        android:textColor="@color/azul"
                        android:textSize="16dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <!--BTNS OPC-->
    <LinearLayout
        android:id="@+id/btn_opc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/graybg"
        android:orientation="vertical"
        android:elevation="5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView2"
            android:name="com.leal.cipm_testing.components.BottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_bottom_nav"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>