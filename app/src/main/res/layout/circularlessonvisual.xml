<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/containet_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        >

        <!--   BTN CLASE    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="#1132d8"
            android:background="@drawable/boton_redondeado_azul"
            android:orientation="horizontal"
            >


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circlebtn"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:padding="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play"
                    android:backgroundTint="#1132d8"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                >
                <TextView
                    android:id="@+id/buttonLesson1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clase #1"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <!--    TXT PREGUNTA    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responde a la pregunta:"
                android:textStyle="normal"
                android:textSize="19sp"
                android:textColor="@color/gray_light"
                />

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿Que pasa?"
                android:textStyle="normal"
                android:textSize="19sp"
                android:textColor="#1132d8"
                />
        </LinearLayout>

        <!--    CONTENT DESC    -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            >
            <TextView
                android:id="@+id/subTitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Present Continuous"
                android:textColor="#1132d8"
                android:textSize="19sp"
                />
            <TextView
                android:id="@+id/descriptionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aprende a hablar de cosas que estan sucediendo ahora mismo"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/completedTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aprende a hablar de cosas que estan sucediendo ahora mismo"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:text="Nivel Basico"
                android:textColor="@color/gray"
                android:textStyle="normal"
                android:textSize="16sp"
                />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>