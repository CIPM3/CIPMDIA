            <!--AUDIO-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >
                <!-- Button to start playing the audio -->
                <Button
                    android:id="@+id/play_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondeado"
                    android:backgroundTint="@color/azul"
                    android:drawableStart="@android:drawable/ic_media_play"
                    android:padding="10dp"
                    android:text="Preciona para escuchar el audio!"
                    />
            </LinearLayout>

            <!--TEST LAYOUT-->
            <LinearLayout
                android:id="@+id/test_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >
                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borde_azul"
                    android:text="Respuesta 1"
                    android:onClick="btn1"
                    android:textColor="@color/azul"
                    android:textSize="10dp"

                                />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borde_azul"
                    android:text="Respuesta 2"
                    android:onClick="btn2"
                    android:textColor="@color/azul"
                    android:textSize="10dp"
                                />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borde_azul"
                    android:onClick="btn3"
                    android:text="Respuesta 3"
                    android:textColor="@color/azul"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/borde_azul"
                    android:text="Respuesta 4"
                    android:onClick="btn4"
                    android:textColor="@color/azul"
                    android:textSize="10dp"
                                />
            </LinearLayout>

            <!--BOTON SIGUIENTE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="10dp"
                >

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/boton_redondeado"
                    android:backgroundTint="@color/azul"
                    android:onClick="availabilityTest"
                    android:text="Siguiente"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btn_opc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/graybg"
        android:orientation="vertical"
        android:elevation="5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView7"
            android:name="com.leal.cipm_testing.BottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_bottom_nav"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>