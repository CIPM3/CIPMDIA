<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/button_fragment"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn_profile"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/bgProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:background="@drawable/ic_grupo_user"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Perfil"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_premium_bottom"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/bgPremium"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:orientation="vertical"
                android:background="@drawable/premium"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="CIPM Premium"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_main"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/bgMain"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:background="@drawable/diversity"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Clases en linea"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_test_bottom"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/bgTest"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:background="@drawable/ic_grupo_check"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Saber mi nivel"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="8dp" />
        </LinearLayout>


