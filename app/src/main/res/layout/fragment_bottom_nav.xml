<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button_fragment"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"

    >

    <LinearLayout
        android:id="@+id/btn_main"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="4dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/bgMain"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="@drawable/ic_grupo_main"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Main"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_test_bottom"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="4dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/bgTest"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="@drawable/ic_grupo_check"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Test"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_premium_bottom"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/bgPremium"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:orientation="vertical"
            android:background="@drawable/premium"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Hazte Premium"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_chat_maestro"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="4dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/bgChat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="@drawable/ic_grupo_chat"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Chat"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_profile"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="4dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/bgProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="@drawable/ic_grupo_user"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Perfil"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10dp" />
    </LinearLayout>





</LinearLayout>