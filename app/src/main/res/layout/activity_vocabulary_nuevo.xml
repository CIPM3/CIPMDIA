<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".vocabulary_nuevo">

    <LinearLayout
        android:id="@+id/linearLayout8"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Header-->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:elevation="5dp"
            android:background="@color/graybg"
            >
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView"
                android:name="com.leal.cipm_testing.components.header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:layout="@layout/fragment_header"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <!--Spinner-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:onClick="activaSpinner1"
                    android:paddingHorizontal="30dp">
                    <!--text-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textspin1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Present Simple"
                            android:textColor="@color/black"
                            android:textSize="22dp"
                            android:textStyle="bold"

                            />
                    </LinearLayout>

                    <!--Spinner-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:gravity="end|center">

                        <Spinner
                            android:id="@+id/spinuno"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/ic_grupo_select"
                            android:gravity="end"
                            android:spinnerMode="dialog"
                            android:theme="@style/MySpinnerStyle"
                            />
                    </LinearLayout>

                </LinearLayout>

                <!--Video View-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp">

                    <!--<LinearLayout
                        android:id="@+id/vf"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/ic_grupo_videobox"
                        android:onClick="showV"
                        android:visibility="gone"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <VideoView
                        android:id="@+id/videoView1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        />-->

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/fragmentContainerView4"
                        android:name="com.leal.cipm_testing.components.VideoPlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout="@layout/fragment_video_player"
                        android:layout_weight="1" />
                </LinearLayout>

                <!--Texto Spinner2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp">
                    <!--Texto-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Practice it"
                            android:textColor="@color/azul"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/ic_rect_ngulo_selecline">

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!--TEXT -->
                <LinearLayout
                    android:id="@+id/txt_exp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="15dp"
                    >
                    <TextView
                        android:id="@+id/spa_sent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Elige un rango de palabras o ve tutorial"

                        android:textColor="@color/black"
                        android:textSize="7pt" />
                </LinearLayout>

                <!--Spanish Sentences-->
                <LinearLayout
                    android:id="@+id/spanish_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingHorizontal="30dp"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Como dirias? :"
                            android:textColor="@color/black"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/spanishsentence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="click siguiente oraciÃ³n"
                            android:textColor="@color/black"
                            android:textSize="15dp" />
                    </LinearLayout>

                </LinearLayout>

                <!--Input Eng-->
                <LinearLayout
                    android:id="@+id/input_lay"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="5dp"
                    android:visibility="gone"
                    >

                    <EditText
                        android:id="@+id/answerinput1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:textColor="@color/black"
                        android:hint="escribe tu respuesta o presiona microfono y di tu respuesta"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/black"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        />
                    <!--Validacion-->
                    <LinearLayout
                        android:id="@+id/opclay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:id="@+id/respdecir"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_microfono"
                            android:visibility="visible"
                            android:onClick="hablar"
                            android:orientation="horizontal"
                            android:layout_marginRight="5dp"
                            >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/resplay"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:background="@drawable/ic_controlar"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--EngCheck-->
                <LinearLayout
                    android:id="@+id/answer_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp"
                    android:visibility="gone"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Respuesta correcta es:"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:paddingLeft="10dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="5"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="5"
                            >
                            <TextView
                                android:id="@+id/txteng"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="eng"
                                android:textColor="@color/azul"
                                android:textSize="14dp"
                                />

                            <TextView
                                android:id="@+id/txteng2"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="eng"
                                android:textColor="@color/azul"
                                android:textSize="14dp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/respescu2"
                            android:layout_width="8dp"
                            android:layout_height="15dp"
                            android:layout_margin="15dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/ic_volumen"
                            android:orientation="horizontal"
                            android:onClick="speakans"
                            android:visibility="visible"
                            >
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <!-- Boton -->
                <LinearLayout
                    android:id="@+id/btn_emp_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/borde_azul"
                        android:gravity="center"
                        android:onClick="practice"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Empezar"
                            android:textAlignment="center"
                            android:textColor="@color/azul"
                            android:textSize="18dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Boton Check -->
                <LinearLayout
                    android:id="@+id/btn_check_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/borde_azul"
                        android:gravity="center"
                        android:onClick="checkanswer"
                        >

                        <TextView
                            android:id="@+id/btncheck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chequea tu respuesta"
                            android:textAlignment="center"
                            android:textColor="@color/azul"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Boton Cont -->
                <LinearLayout
                    android:id="@+id/btn_cont_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/borde_azul"
                        android:gravity="center"
                        android:onClick="practice"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Continuar"
                            android:textAlignment="center"
                            android:textColor="@color/azul"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <!--BTNS OPC-->
    <LinearLayout
        android:id="@+id/btn_opc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/graybg"
        android:orientation="vertical"
        android:elevation="5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView2"
            android:name="com.leal.cipm_testing.components.BottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_bottom_nav"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>