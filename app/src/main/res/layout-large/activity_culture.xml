<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Culture">


    <!--SPINNER Y BTN PLAY-->
    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10pt"
        android:paddingLeft="5pt"
        android:paddingRight="5pt"

        >
        <Spinner
            android:id="@+id/spinercult"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:spinnerMode="dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/playcult"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            tools:ignore="SpeakableTextPresentCheck">

        </Spinner>

        <Button
            android:id="@+id/playcult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showv"
            android:text="Play"
            app:layout_constraintBottom_toTopOf="@+id/vvcult"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spinercult"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.172" />
    </LinearLayout>

    <!--VIDEO FIELD-->
    <LinearLayout
        android:id="@+id/videoField"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout15"
        tools:layout_editor_absoluteX="7dp">
        <VideoView
            android:id="@+id/vvcult"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="88dp" />
    </LinearLayout>

    <!--BTN GET-->
    <LinearLayout
        android:id="@+id/linearLayout21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7pt"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoField">

        <Button
            android:id="@+id/getbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:onClick="getpos"
            android:text="Get"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <!--TEXTS FIELDS CONTAINER-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8pt"
        android:layout_marginBottom="8pt"
        android:gravity="center"
        android:paddingHorizontal="10pt"
        android:orientation="horizontal"
        android:paddingLeft="5pt"
        android:paddingRight="5pt"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout21">
        <!--TEXTS FIELDS LEFT-->
        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|fill"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text22"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="TextView" />

        </LinearLayout>

        <!--TEXTS FIELDS RIGHT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|fill"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            app:layout_constraintStart_toEndOf="@+id/linearLayout7">

            <TextView
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text9"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text10"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <!--BTN SHOW A-->
    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="5pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/showanswercult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showans"
            android:text="Show answers"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>