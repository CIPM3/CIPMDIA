<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#88000000"/> <!-- Shadow color, semi-transparent black -->
            <size android:width="210dp" android:height="210dp"/>
        </shape>
    </item>

    <!-- Button Layer -->
    <item android:top="5dp" android:right="5dp" android:bottom="5dp" android:left="5dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Your desired button color -->
            <size android:width="200dp" android:height="200dp"/>
        </shape>
    </item>

</layer-list>
